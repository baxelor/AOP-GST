<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">

	<menuitem title="Dashboard" name="menu-dashboard" icon="fa fa-tachometer" icon-background="#997300" action="action.dahboard"/>
		<action-view name="action.dahboard" title="Welcome">
			<view type="dashboard" name="gst-dasboard"/>
		</action-view>
		
		<action-view name="invoice.action" title="Invoice Grid" model="com.axelor.app.gst.db.Invoice">
			<view type="grid" name="invoice-grid"/>
			<domain>self.status ='validated'</domain>
		</action-view>
		
		<dashboard name="gst-dasboard" title="dsboards">
			<dashlet action="chart:chart.invoice.unpaid.customer"/>
			<dashlet action="chart:chart.invoice.paid.product.categories"/>
			<dashlet action="chart:chart.party.per state"/>
			<dashlet action="chart:chart.invoice.per.status.line"/>
			<dashlet action="chart:chart.invoice.per.status.bar"/>
			<dashlet action="invoice.action" colSpan="12"/>
		</dashboard>
	
	
	<!-- ############    Party Menu   ################-->
	
	<menuitem title="Party" name="menu-party"/>
	
	<menuitem title="Party" name="menu-party-party" parent="menu-party" action="menu.party"/>
		<action-view name="menu.party" title="Parties" model="com.axelor.app.gst.db.Party">
			<view type="grid" name="party-grid"/>
			<view type="form" name="party-form"/>
			<view type="cards" name="party-card"/>
			<context name="json-enhance" expr="true"/>
		</action-view>
		
	<menuitem title="Contact" name="menu-party-contact" parent="menu-party" icon="fa fa-address-book" icon-background="#cca300" action="menu.contact"/>
		<action-view name="menu.contact" title="Contacts" model="com.axelor.app.gst.db.Contact">
			<view type="grid" name="contact-grid"/>
			<view type="form" name="contact-form"/>
		</action-view>
	
	<menuitem title="Configurations" name="menu-configurations" parent="menu-party" icon="fa fa-cog" icon-background="#991f00"/>
	
		<menuitem title="Address" name="menu-confg-address" parent="menu-configurations" action="config.address.address"/>
			<action-view name="config.address.address" title="Addresses" model="com.axelor.app.gst.db.Address">
				<view type="grid" name="address-grid"/>
				<view type="form" name="address-form"/>
			</action-view>
		
		<menuitem title="City" name="menu-config-city" parent="menu-configurations" action="config.address.city"/>
			<action-view name="config.address.city" title="Cites" model="com.axelor.app.gst.db.City">
				<view type="grid" name="city-grid"/>
				<view type="form" name="city-form"/>
			</action-view>
				
		<menuitem title="State" name="menu-config-state" parent="menu-configurations" action="config.address.state"/>
			<action-view name="config.address.state" title="States" model="com.axelor.app.gst.db.State">
				<view type="grid" name="state-grid"/>
				<view type="form" name="state-form"/>
			</action-view>
		
		<menuitem title="Country" name="menu-config-country" parent="menu-configurations" icon="fa fa-globe" action="config.address.country"/>
			<action-view name="config.address.country" title="Countries" model="com.axelor.app.gst.db.Country">
				<view type="grid" name="country-grid"/>
				<view type="form" name="country-form"/>
			</action-view>
		
		
	<!-- ###################   Product   #################-->
	
		<menuitem title="Product" name="menu-product" icon="fa fa-product-hunt" icon-background="#7a7a52"/>
			<menuitem title="Product" name="menu-product-product" parent="menu-product" action="menu.product.product"/>
				<action-view name="menu.product.product" title="Products" model="com.axelor.app.gst.db.Product">
					<view type="grid" name="product-grid"/>
					<view type="form" name="product-form"/>
					<view type="cards" name="product-card"/>
				</action-view>
			<menuitem title="Product Categories" name="menu-product-categories" parent="menu-product" action="menu.product.category"/>
				<action-view name="menu.product.category" title="PCategory" model="com.axelor.app.gst.db.ProductCategory">
					<view type="grid" name="p-category-grid"/>
					<view type="form" name="p-category-form"/>
				</action-view>
			
			
			
	<!-- ################### Invoice     ################## -->
	
		<menuitem title="Invoice" name="menu-invoice" icon="fa fa-file-pdf-o" icon-background="#a6a6a6"/>
			<menuitem title="All Invoices" name="menu-invoice-all" parent="menu-invoice" action="menu.invoice.all"/>
				<action-view name="menu.invoice.all" title="Invoice" model="com.axelor.app.gst.db.Invoice">
					<view type="grid" name="invoice-grid"/>
					<view type="kanban" name="invoice-kanban"/>
					<view type="form" name="invoice-form"/>
				</action-view>
			<menuitem title="Create Invoice" name="menu-invoice-create" parent="menu-invoice" action="menu.invoice.create"/>
				<action-view name="menu.invoice.create" title="Creates" model="com.axelor.app.gst.db.Invoice">
					<view type="form" name="invoice-form"/>
				</action-view>
							
			<menuitem title="Draft Invoices" name="menu-invoice-draft" parent="menu-invoice" action="menu.invoice.draft"/>
				<action-view name="menu.invoice.draft" title="Drafts" model="com.axelor.app.gst.db.Invoice">
					<view type="grid" name="invoice-grid"/>
					<view type="form" name="invoice-form"/>
					<domain>self.status = :invoice_status</domain>
					<context name="invoice_status" expr="draft"/>
				</action-view>
			<menuitem title="Validated Invoices" name="menu-invoice-validated" parent="menu-invoice" action="menu.invoice.validated"/>
				<action-view name="menu.invoice.validated" title="Validates" model="com.axelor.app.gst.db.Invoice">
					<view type="grid" name="invoice-grid"/>
					<view type="form" name="invoice-form"/>
					<domain>self.status = :invoice_status</domain>
					<context name="invoice_status" expr="validated"/>
				</action-view>
			
			<menuitem title="Paid Invoices" name="menu-invoice-paid" parent="menu-invoice" action="menu.invoice.paid"/>
				<action-view name="menu.invoice.paid" title="Paids" model="com.axelor.app.gst.db.Invoice">
					<view type="grid" name="invoice-grid"/>
					<view type="form" name="invoice-form"/>
					<domain>self.status = :invoice_status</domain>
					<context name="invoice_status" expr="paid"/>
				</action-view>	
			
			<menuitem title="Cancelled Invoices" name="menu-invoice-cancelled" parent="menu-invoice" action="menu.invoice.cancel"/>
				<action-view name="menu.invoice.cancel" title="Cancelled" model="com.axelor.app.gst.db.Invoice">
					<view type="grid" name="invoice-grid"/>
					<view type="form" name="invoice-form"/>
					<domain>self.status = :invoice_status</domain>
					<context name="invoice_status" expr="cancelled"/>
				</action-view>
			
	<!--   ####################    Comapny    ################-->
	
		<menuitem title="Company" name="menu-company" icon="fa fa-building-o" icon-background="#666633"/>
			<menuitem title="Company" name="menu-company-company" parent="menu-company" action="menu.company.company"/>
				<action-view name="menu.company.company" title="Compaines" model="com.axelor.app.gst.db.Company">
					<view type="grid" name="company-grid"/>
					<view type="form" name="company-form"/>
				</action-view>
				
				
			<menuitem title="Bank Account" name="menu-company-bank-account" parent="menu-company" action="menu.company.bank"/>
			<action-view name="menu.company.bank" title="Bank Accounts" model="com.axelor.app.gst.db.BankAccount">
				<view type="grid" name="bank-account-grid"/>
				<view type="form" name="bank-account-form"/>
			</action-view>
			
			<menuitem title="Sequence" name="menu-company-sequence" parent="menu-company" action="menu.company.sequence"/>
				<action-view name="menu.company.sequence" title="Sequence" model="com.axelor.app.gst.db.Sequence">
					<view type="grid" name="sequence-grid"/>
					<view type="form" name="sequence-form"/>
				</action-view>
		<menuitem title="Demo" name="demo-menu" action="demo.menu"/>
			<action-view name="demo.menu" title="Demo" model="com.axelor.app.gst.db.Demo">
				<view type="form" name="demo-form"/>
			</action-view>
</object-views>