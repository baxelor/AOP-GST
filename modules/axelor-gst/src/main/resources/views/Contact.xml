<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  
  
  	<selection name="contact-selection-type">
  		<option value="primary">Primary</option>
  		<option value="secondary">Secondary</option>
  		<option value="others">Others</option>
  	</selection>
  
  	<grid model="com.axelor.app.gst.db.Contact" title="Contacts" name="contact-grid">
  		<field name="name"/>
  		<field name="type"/>
  		<field name="primaryPhone"/>
  		<field name="secondaryPhone"/>
  		<field name="primaryEmail"/>
  		<field name="secondaryEmail"/>
  	</grid>
  	
  	<form model="com.axelor.app.gst.db.Contact" title="Contact Form" name="contact-form">
  		<panel title="Contact">
  			<field name="name"/>
	  		<field name="type" selection="contact-selection-type"/>
	  		<field name="primaryPhone"/>
	  		<field name="secondaryPhone"/>
	  		<field name="primaryEmail"/>
	  		<field name="secondaryEmail"/>
  		</panel>
  		
  	</form>
  </object-views>