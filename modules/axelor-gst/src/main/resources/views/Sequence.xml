<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.4.xsd">
  	
  	<grid model="com.axelor.app.gst.db.Sequence" title="Sequence" name="sequence-grid">
  		<field name="prefix"/>
  		<field name="suffix"/>
  		<field name="padding"/>
  		<field name="nextNumber"/>
  	</grid>
  	
  	<form model="com.axelor.app.gst.db.Sequence" title="Sequence" name="sequence-form">
  		<panel title="Sequence">
  			<field name="prefix" onChange="action.method.sequence.generation"/>
	  		<field name="suffix" onChange="action.method.sequence.generation"/>
	  		<field name="padding" onChange="action.method.sequence.generation"/>
	  		<field name="nextNumber"/>
	  		<field name="model" required="true"/>
	  	</panel>
  	</form>
  	
  	<action-method name="action.method.sequence.generation">
  		<call class="com.axelor.app.gst.web.SequenceController" method="SequenceGeneration"/>
  	</action-method>
  </object-views>